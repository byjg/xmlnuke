void WelcomeMessage()
{
	Response.Write("<h1>Setup Web.Config parameters</h1>");
	Response.Write("Setup all necessary Xmlnuke Web.Config parameters. <br><br>");
	Response.Write("<a href='check_install.aspx?action=config'>Click here to continue</a>");
}

void EditConfig()
