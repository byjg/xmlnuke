		configValues["xmlnuke.URLXMLNUKEENGINE"] = "xmlnuke.aspx";
		configValues["xmlnuke.DEFAULTSITE"] = "sample";
		configValues["xmlnuke.DEFAULTPAGE"] = "page";
		configValues["xmlnuke.LOGINMODULE"] = "login";
